<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">false</item>
        <item name="android:toolbarStyle">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="ToolbarStyle" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="background" >@color/colorVillageGreen</item>
        <item name="android:titleTextColor">@color/colorActionBarFont</item>
        <item name="android:textColor">@color/colorActionBarFont</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="backgroundColor">@color/colorVillageGreen</item>
        <item name="titleTextColor">@color/colorActionBarFont</item>
        <item name="colorPrimary">@color/colorActionBarFont</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
